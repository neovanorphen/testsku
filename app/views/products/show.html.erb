<section class="content-header">
  <h1>
    Products
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="/orders">Products</a></li>
    <li class="active">Product Details</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Product Details</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
          <p>
            <strong>Name:</strong>
            <%= @product.name %>
          </p>
          <p>
            <strong>SKU:</strong>
            <%= @product.sku %>
          </p>
          <p>
            <strong>Price:</strong>
            <%= @product.price %>
          </p>
        </div>
        <div class="box-footer">
          <%= link_to 'Edit', edit_product_path(@product) ,:class =>"btn bg-purple margin"%>
          <%= link_to 'Back', products_path ,:class =>"btn bg-purple margin"%>
        </div>
      </div><!-- /.box -->
    </div>
  </div>   <!-- /.row -->
</section><!-- /.content -->
