<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Products
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Products</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Products List</h3>
          <div class="box-tools">
            <%= link_to 'New Product', new_product_path ,:class =>"btn btn-primary btn-xs"%>
          </div>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive" style="overflow-x: inherit">
          <table id="cost_centers" class="datatable table table-condensed table-bordered table-hover table-responsive no-wrap">
            <thead>
            <tr>
              <th>Name</th>
              <th>Sku</th>
              <th>Price</th>
            </tr>
            </thead>

            <tbody>
            <% @products.each do |product| %>
                <tr>
                  <td><%= product.name %></td>
                  <td><%= product.sku %></td>
                  <td><%= product.price%></td>
                  <td><%= link_to 'Show', product ,  :class =>"btn btn-primary btn-block btn-xs"%>
                    <%= link_to 'Edit', edit_product_path(product),:class =>"btn btn-warning btn-block btn-xs" %>
                    <%= link_to 'Delete', product, method: :delete, data: { confirm: 'are you sure?' },:class =>"btn btn-danger btn-block btn-xs" %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</section><!-- /.content -->