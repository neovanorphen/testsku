<section class="content-header">
  <h1>
    Users
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">Users Admin</a></li>
    <li><a href="#">Users</a></li>
    <li class="active">User Details</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">User Details</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
          <p>
            <strong>User:</strong>
            <%= @user.email %>
          </p>


        </div>
        <div class="box-footer">
          <%= link_to 'Edit', edit_user_path(@user) ,:class =>"btn bg-purple margin"%>
          <%= link_to 'Back', user_index_path ,:class =>"btn bg-purple margin"%>
        </div>
      </div><!-- /.box -->
    </div>
  </div>   <!-- /.row -->
</section><!-- /.content -->
