<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Users

  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Users Admin</li>
    <li class="active">Users</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Users List</h3>
          <div class="box-tools">
            <%= link_to 'New User', new_user_registration_path ,:class =>"btn btn-primary btn-xs"%>
          </div>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive" style="overflow-x: inherit">
          <table id="users" class="datatable table table-condensed table-bordered table-hover responsive no-wrap">
            <thead>
            <tr>
              <th>Email</th>
              <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>

                  <td>
                    <%= link_to 'Show', user ,  :class =>"btn btn-primary btn-block btn-xs"%>
                    <%= link_to 'Edit', edit_user_path(user),:class =>"btn btn-warning btn-block btn-xs" %>
                    <%= link_to 'Delete', user, method: :delete, data: { confirm: 'are you sure?' },:class =>"btn btn-danger btn-block btn-xs" %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</section><!-- /.content -->
