      <div class="form-group">
        <%= f.label :date %><br>
        <%= f.date_select :date, :class => 'form-control'%>
      </div>
    </div><!-- /.box-body -->

    <div class="box-footer">
      <%= f.submit "Save", :class => "btn btn-primary" %>
      <%= link_to 'Back', orders_path ,:class =>"btn bg-purple margin"%>
    </div>
<% end %>


