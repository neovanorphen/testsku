<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Orders
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Orders</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Orders List</h3>
          <div class="box-tools">
            <%= link_to 'New Order', new_order_path ,:class =>"btn btn-primary btn-xs"%>
          </div>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive" style="overflow-x: inherit">
          <table id="cost_centers" class="datatable table table-condensed table-bordered table-hover table-responsive no-wrap">
            <thead>
            <tr>
              <th>Code</th>
              <th>Date</th>
              <th>User</th>
            </tr>
            </thead>

            <tbody>
            <% @orders.each do |order| %>
                <tr>
                  <td><%= order.code %></td>
                  <td><%= order.date %></td>
                  <td><%= User.find(order.user_id).email%></td>
                  <td><%= link_to 'Show', cost_center ,  :class =>"btn btn-primary btn-block btn-xs"%>
                    <%= link_to 'Edit', edit_order_path(order),:class =>"btn btn-warning btn-block btn-xs" %>
                    <%= link_to 'Delete', cost_center, method: :delete, data: { confirm: 'are you sure?' },:class =>"btn btn-danger btn-block btn-xs" %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</section><!-- /.content -->