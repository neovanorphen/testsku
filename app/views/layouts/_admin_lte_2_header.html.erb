<!-- Main Header -->
<header class="main-header">

  <!-- Logo -->
  <a href="/" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>Test</b></span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Test</b></span>
  </a>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <a href="" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.email %>
          </a>
          <ul class="dropdown-menu">
            <!-- The user image in the menu -->
            <li class="user-header" style="height: auto;">
              <p>
                <%= current_user.email %>
                <small><%= I18n.l Time.now, :format => :long %></small>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", edit_user_registration_path, :class => "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to "Log Out", destroy_user_session_path, :class => "btn btn-default btn-flat", :method => :delete %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
