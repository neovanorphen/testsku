
<section class="content-header">
    <h1>
        orders_products
        
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">orders products</li>
    </ol>
</section>

<section>

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Order List</h3>
        </div><!-- /.box-header -->
      <div class="box-body table-responsive">
        <div id="example2_wrapper" class="dataTables_wrapper form-inline" role="grid">
          <div class="row">
            <div class="col-xs-6"><%= link_to 'New  order', new_orders_product_path, :class => 'btn btn-primary' %></div>
            <div class="col-xs-6"><br></div>
          </div>
          <div class="row"><br></div>
          <table id="example2" class="table table-bordered table-hover dataTable" aria-describedby="example2_info">
            <thead>
              <tr role="row">
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">producto</th>                
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Order</th>
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Amount</th>
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Show</th>
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Edit</th>
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Delete</th>
              </tr>
            </thead>

            
            <tbody role="alert" aria-live="polite" aria-relevant="all">
              <% @orders_products.each do |orders_product| %>
              <tr class="odd">
                <td class=" "><%= Product.find(orders_product.product).sku %></td>
                <td class=" "><%= Order.find(orders_product.order).code %></td>
                <td class=" "><%= orders_product.amount %></td>
                <td ><%= link_to 'Show', orders_product, :class => 'btn btn-info btn-sm' %></td>
                <td><%= link_to 'Edit', edit_order_path(orders_product) , :class => 'btn btn-warning btn-sm'%></td>
                <td><%= link_to 'Delete',orders_product , :class => 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div><!-- /.box-body -->
                            
    </div>
      </div>
</section>